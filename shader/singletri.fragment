#version 430 core 

out vec4 color;

in vec2 uv;
layout (binding = 0) uniform sampler2D tex;

void main(void)                                                   
{                                                                 
    //color = vec4(0.0, 0.8, 1.0, 1.0);
    color = texture(tex, uv);
}                                                                 